<div class="modal hide" id="add-callback">
    <form {{action "save" on="submit" target="view"}}>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h2>Add Webhook</h2>
    </div>
    <div class="modal-body">
        {{ partial "modals/modalErrors" }}

        <div {{bindAttr class=":control-group view.model.validationErrors.url:error"}}>
            <label>URI</label>
            {{view Ember.TextField valueBinding="view.model.url" name="url" class="full"}}
        </div>
    </div>
    <div class="modal-footer">
        {{view Ember.Select
            contentBinding="view.callback_revisions"
            valueBinding="view.model.revision"
            class="pull-left"
            name="callback-revision"
            optionValuePath="content.value"
            optionLabelPath="content.label"
        }}
        {{view Balanced.ModalActionButtonsView submitTitle="Add"}}
    </div>
    </form>
</div>
